<idea-plugin>
    <id>com.ASEcomps.RuntimeSearch_Plugin</id>
    <name>RuntimeSearch</name>
    <vendor email="support@yourcompany.com" url="http://www.yourcompany.com">ASE Comps 2018</vendor>

    <description><![CDATA[
    Enter short description for your plugin here.<br>
    <em>most HTML tags may be used</em>
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Test Tool Window" secondary="true" anchor="bottom"
                    factoryClass="RuntimeSearchWindow"/>
        <programRunner implementation="RuntimeSearchProgramRunner" id="RUNTIME_SEARCH_PROGRAM_RUNNER" />
        <executor implementation="RuntimeSearchExecutor" id="RUNTIME_SEARCH_EXECUTOR" />
        <java.programPatcher implementation="RunWithAgentPatcher"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="RuntimeSearchDropdown" class="RuntimeSearchDropdown" text="Debug with RuntimeSearch..."
                description="Open RuntimeSearch Window to start debugging" icon="images/RSlogo2.png">
            <add-to-group group-id="RunMenu" anchor="before" relative-to-action="Android.ChooseProfileConfiguration"/>
        </action>
    </actions>
</idea-plugin>